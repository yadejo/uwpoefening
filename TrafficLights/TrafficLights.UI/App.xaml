<Application
    x:Class="TrafficLights.UI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:TrafficLights.UI.Converters"
    xmlns:local="using:TrafficLights.UI"
    RequestedTheme="Light">


    <Application.Resources>
        <ResourceDictionary>
            <vm:ViewModelLocator xmlns:vm="using:TrafficLights.UI.ViewModel" x:Key="Locator" />
            <converters:BooleanToNullableConverter x:Key="BooleanToNullableConverter" />
            <converters:IntToStringConverter x:Key="IntToStringConverter" />
            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <converters:DecimalToStringConverter x:Key="DecimalToStringConverter" />
        </ResourceDictionary>
    </Application.Resources>

</Application>
